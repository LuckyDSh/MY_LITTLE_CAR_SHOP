
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h1>All Cars</h1>
    <h3>@Model.currCategory</h3>

    @{
        foreach (var Car in Model.AllCars)
        {
            <div>
                <h2>Model: @Car.name</h2>
                <p>Price: @Car.price.ToString("c")</p>
            </div>
        }
    }
</body>
</html>
